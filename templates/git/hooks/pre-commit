---
id: git-hook-pre-commit
version: 1.0.0
category: git
description: Basic pre-commit hook for running linters and formatters
language: bash
dependencies: []
variables:
  - name: LINT_COMMAND
    description: Command to run linting (e.g., "npm run lint", "pylint .", "cargo clippy")
    required: true
  - name: FORMAT_COMMAND
    description: Command to run formatting (e.g., "npm run format", "black .", "cargo fmt")
    required: false
    default: ""
---

#!/bin/bash
# Git pre-commit hook
# Generated by Project Catalyst
#
# This hook runs before each commit to ensure code quality

set -e

echo "üîç Running pre-commit checks..."

# Run linter
if [ -n "${LINT_COMMAND}" ]; then
  echo "  ‚Üí Linting..."
  ${LINT_COMMAND} || {
    echo "‚ùå Linting failed. Please fix errors before committing."
    exit 1
  }
  echo "  ‚úÖ Linting passed"
fi

# Run formatter (if configured)
if [ -n "${FORMAT_COMMAND}" ]; then
  echo "  ‚Üí Formatting..."
  ${FORMAT_COMMAND} || {
    echo "‚ö†Ô∏è  Formatting failed, but continuing..."
  }
  echo "  ‚úÖ Formatting complete"
fi

echo "‚úÖ Pre-commit checks passed"
exit 0
